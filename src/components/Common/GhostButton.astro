---
export interface Props {
  frameless?: boolean;
  href?: string;
  // description: string;
  // image?: string;
}

const { frameless, href } = Astro.props as Props;
---
<style global lang="scss">
$background: aliceblue;

.ghostButton {
	position: relative;
	display: flex;
	justify-content: space-evenly;
	outline: 0;
	background: initial;
	font: inherit;
	padding: 0.3em 0;
	width: 7em;
	text-align: center;
	overflow: hidden;
	transition: 0.5s;
	border: 1px solid $background;
	border-radius: 2px;

	&:hover {
		background: $background !important;
		border: 1px solid $background;
		color: black;
		border-radius: 5px;
		box-shadow: 0 0 5px $background, 0 0 25px $background,
			0 0 50px $background, 0 0 100px $background;

		:global(svg) {
			filter: invert(0.8);
		}
	}

	&.invert {
		border: 1px solid black;
		color: black;

		&:hover {
			background: black;
			color: $background;
			box-shadow: 0 0 5px black, 0 0 25px black, 0 0 50px black,
				0 0 100px black;
		}
	}

	&.frameless {
		border: none !important;

		&:hover {
			background: $background;
		}
	}
}
</style>
<a class='ghostButton' href={href}>
  <slot />
</a>