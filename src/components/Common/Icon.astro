---
import Icon from 'astro-icon'

export interface Props {
  name: string;
  classList?: string;
}

let { name, classList = "" } = Astro.props as Props;

---
<style global>
.svg-icon {
    display: inline-flex;
    align-self: center;
}
.svg-icon svg {
    height:1em;
    width:1em;
}
</style>
<span class={"svg-icon " + classList}>
  <Icon name={name} />
</span>