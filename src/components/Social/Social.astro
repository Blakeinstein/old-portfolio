---
import socials from './socials.ts';
import Link from './Link.astro';
---
<style slot="style" lang="scss">
$size: 3em;
#socials {
  width: 90%;
  height: 90%;
  display: flex;
  flex-flow: column;
  justify-content: space-around;

  > ul {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-evenly;
    align-content: space-evenly;
    width: 100%;
    height: 100%;

    > li {
      display: flex;
      flex-flow: column-reverse nowrap;
      justify-content: center;
      align-items: center;
      width: 45%;

      > span {
        display: block;
        text-align: center;
        margin-bottom: 10px;
      }
    }

    .icons {
      text-align: center;
      // filter: url("#goo");+
      
      display: flex;
      flex-flow: row wrap;
      align-items: center;
      justify-content: center;

      > li {
        display: inline-block;
        padding: 0;

        > a {
          height: $size;
          width: $size;
          line-height: $size;
          font-size: 2em;
        }

        > a,
        svg {
          text-align: center;
          border-radius: 50%;
          color: rgba(255, 255, 255, 0.8);
          display: block;
        }
      }
    }

    .fa-linkedin-in {
      background: #0085ae;
    }
    .fa-twitter {
      background: #32ccfe;
    }
    .fa-reddit-alien {
      background: #f74300;
    }
    .fa-instagram {
      background: radial-gradient(
        circle at 30% 107%,
        #fdf497 0%,
        #fdf497 5%,
        #fd5949 45%,
        #d6249f 60%,
        #285aeb 90%
      );
    }
    .fa-github {
      background: #070709;
    }
    .fa-stack-overflow {
      background: #ff7300;
    }
    .fa-steam {
      background: linear-gradient(120deg, #00adee, #000000);
    }
    .fa-discord {
      background: #8697f6;
    }
    .fa-battle-net {
      background: #2e60b4;
    }
    .fa-anime {
      background: #0085ae;
    }
    .fa-soundcloud {
      background: #f75219;
    }
    .fa-spotify {
      background: #1ed760;
    }
  }
}
</style>
<div id="socials">
  <ul>
    {socials.map(([group, links]) => {
      return (
        <li class="section">
          <span>{group}</span>
          <ul class="icons">
            {links.map(social => (
              <Link
                tippyContent={social.name}
                href={social.href}
                icon={social.icon}
              />
            ))}
          </ul>
        </li>
      )
    })}
  </ul>
</div>