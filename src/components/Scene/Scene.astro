<style lang="scss">
#loading-container {
  position: absolute;
  height: 100vh;
  width: 100%;
  z-index: 50;
  background-color: #111;
  text-align: center;
  color: #ffffff;
  letter-spacing: 0.1em;
  visibility: visible;
  opacity: 1;
	
	&.hide {
    opacity: 0;
    visibility: hidden;
    transition: all 2.4s 1.2s ease-in-out;

    > #loading-logo {
      transition: all 1s ease-out;
    }

    > #loading-bar {
      opacity: 0;
      visibility: hidden;
      transition: all 0.5s ease-out;
    }
  }
}

#loading-logo {
	position: absolute;
	height: 40vh;
	width: 40vh;
	top: 10vw;
	left: calc(50vw - 20vh);

	> img {
		height: 100%;
		width: 100%;
	}
}

#loading-bar {
	stroke: slateblue;
	position: absolute;
	top: 65%;
	left: 50%;
	height: 80px;
	width: 80px;
	transform: translateX(-50%);
}

.loading-bar-circle {
	transition: stroke-dashoffset 1s ease-in-out;
}

#hero-background{
  height: 100vh;
  width: 100vw;
  position: absolute;
  top: 0; 
  left: 0;
  z-index: -1;
  transition: z-index 0.5s ease;
  overflow: hidden;
}
</style>

<div id="loading-container">
    <div id="loading-logo">
        <img src="/assets/logo.svg" width="100%" height="100%" alt="Logo" /> 
    </div>
    <div id="loading-bar">
        <svg class="loading-bar-inner" width="100%" height="100%" viewBox="0 0 80 80">
    <path id="loading-bar-circle" class="loading-bar-circle" stroke-width="6" stroke="aliceblue" fill="transparent" d="M40,10C57.351,10,71,23.649,71,40.5S57.351,71,40.5,71 S10,57.351,10,40.5S23.649,10,40.5,10z"/>
  </svg>
    </div>
</div>
<div id="hero-background"></div>

<script hoist defer type="module" src={Astro.resolve("./loader.js")}></script>
<script hoist defer type="module" src={Astro.resolve("./sketch.js")}></script>